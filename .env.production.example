# Application
APP_NAME=auth-service
APP_ENV=production
APP_VERSION=1.0.0
APP_DEBUG=false  # Disable debug in production

# Server
HTTP_PORT=8001
GRPC_PORT=9001
SERVER_READ_TIMEOUT=30s
SERVER_WRITE_TIMEOUT=30s
SERVER_IDLE_TIMEOUT=120s
SERVER_GRACEFUL_SHUTDOWN_TIMEOUT=60s

# MongoDB
# Use MongoDB Atlas or managed MongoDB in production
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGO_DATABASE=auth_service_prod
MONGO_MAX_POOL_SIZE=200
MONGO_MIN_POOL_SIZE=50
MONGO_CONNECTION_TIMEOUT=30s
MONGO_QUERY_TIMEOUT=10s

# JWT
JWT_SECRET_KEY=REPLACE_WITH_SECURE_RANDOM_64_BYTE_SECRET
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=720h  # 30 days
JWT_ISSUER=auth-service-prod

# Logger
LOG_LEVEL=info  # Less verbose in production
LOG_FORMAT=json  # Machine-readable for log aggregation
LOG_OUTPUT=stdout  # Kubernetes/Docker captures stdout