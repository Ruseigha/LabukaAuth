# Application Configuration
APP_NAME=auth-service
APP_ENV=development
APP_VERSION=1.0.0
APP_DEBUG=true

# Server Configuration
HTTP_PORT=8001
GRPC_PORT=9001
SERVER_READ_TIMEOUT=10s
SERVER_WRITE_TIMEOUT=10s
SERVER_IDLE_TIMEOUT=60s
SERVER_GRACEFUL_SHUTDOWN_TIMEOUT=30s

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DATABASE=auth_service_dev
MONGO_MAX_POOL_SIZE=100
MONGO_MIN_POOL_SIZE=10
MONGO_CONNECTION_TIMEOUT=10s
MONGO_QUERY_TIMEOUT=5s

# JWT Configuration
# SECURITY: Change this in production!
JWT_SECRET_KEY=your-secret-key-min-32-characters-long-change-in-production
JWT_ACCESS_TOKEN_EXPIRY=15m
JWT_REFRESH_TOKEN_EXPIRY=168h  # 7 days
JWT_ISSUER=auth-service

# Logger Configuration
LOG_LEVEL=debug
LOG_FORMAT=text
LOG_OUTPUT=stdout